-- Abstract DataTypes

DATA Root
    | Root ntree:NTree

DATA NTree
    | NTree Node ntrees:NTrees

TYPE NTrees = [NTree]

DATA Node
    | Text String
    | Tag  String

DERIVING *: Show

{
instance Eq Node where
    Tag n1 == Tag n2 = n1 == n2
    _      == _      = False
}

{
